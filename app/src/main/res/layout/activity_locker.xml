<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/White"
    tools:context=".LockerActivity">

    <TextView
        android:id="@+id/lTiltle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/aldrich"
        android:text="Locker \nInformation"
        android:textAlignment="center"
        android:textColor="@color/purple_700"
        android:textSize="42sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@id/lTiltle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:orientation="horizontal"
            android:layout_marginBottom="14dp"
            android:gravity="center">

            <TextView
                android:layout_width="105dp"
                android:layout_height="50dp"
                android:text="ID:"
                android:layout_marginEnd="10dp"
                android:textSize="32sp"
                android:textColor="@color/Gray"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/editIDLocker"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:hint="ID"
                android:enabled="false"
                android:textSize="30sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:orientation="horizontal"
            android:layout_marginBottom="14dp"
            android:gravity="center">

            <TextView
                android:layout_width="105dp"
                android:layout_height="50dp"
                android:text="Name:"
                android:layout_marginEnd="10dp"
                android:textSize="32sp"
                android:textColor="@color/Gray"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/editNameLocker"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:enabled="false"
                android:textSize="30sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:orientation="horizontal"
            android:layout_marginBottom="14dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Locker NO.:"
                android:layout_marginEnd="10dp"
                android:textSize="32sp"
                android:textColor="@color/Gray"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/editLockerNO"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:hint="NO#"
                android:enabled="false"
                android:textSize="30sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:orientation="horizontal"
            android:layout_marginBottom="14dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="End Date:"
                android:layout_marginEnd="10dp"
                android:textSize="32sp"
                android:textColor="@color/Gray"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/editEndDate"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:hint="DD/MM/YYYY"
                android:enabled="false"
                android:textSize="30sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="14dp"
            android:gravity="center">

            <Button
                android:id="@+id/updateBooking"
                android:layout_width="160dp"
                android:layout_height="55dp"
                android:text="Update"
                android:textSize="25dp"
                android:textAllCaps="false"
                android:layout_marginEnd="15dp"/>
            <Button
                android:id="@+id/deleteBooking"
                android:layout_width="160dp"
                android:layout_height="55dp"
                android:text="Delete"
                android:textAllCaps="false"
                android:textSize="25dp"/>
        </LinearLayout>

    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/BottmBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/bottom_nav_menu"
        app:itemIconSize="40dp"
        android:background="@color/LightGray"
        app:itemIconTint="@color/purple_700"
        app:labelVisibilityMode="unlabeled"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>